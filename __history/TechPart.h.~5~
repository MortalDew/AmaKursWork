void swapCard(Card &a, Card &b)
{
	Card temp = a;
	a = b;
	b = temp;
}
void shuffleDeck(std::array<Card, 36> &deck)
{
	// ѕеребираем каждую карту в колоде
	for (int index = 0; index < 36; ++index)
	{
		// ¬ыбираем любую случайную карту
		int swapIndex = getRandomNumber(0, 35);
		// ћен€ем местами с нашей текущей картой
		swapCard(deck[index], deck[swapIndex]);
	}
}

int getCardValue(const Card &card)
{
	switch (card.rank)
	{
	case RANK_6:		return 6;
	case RANK_7:		return 7;
	case RANK_8:		return 8;
	case RANK_9:		return 9;
	case RANK_10:		return 10;
	case RANK_VALET:	return 10;
	case RANK_DAMA:	        return 10;
	case RANK_KOROL:	return 10;
	case RANK_TYZ:		return 11;
	}

	return 0;
}

